{
  "target": "es6",
  "moduleResolution": "node",
  "noEmit": true,
  "compilerOptions": {
    "outDir": "./lib/",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es2016", "es2015"],
    "experimentalDecorators": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
